<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pagina do Usuario</title>
</head>
<body class="bodyAccount">
    
    <%-include('./partials/Header.ejs') %>

    <main class="pageAccount">

        <nav id="nav-account">
            <img id="profilePicture" src="/img/User.png" >

            <h2 id="saudacao">Olá, Maria!</h2>

            <ul id="accountOption" style="list-style: none">
                <li id="btn-dados"><a href="#dadosPessoais">Dados Pessoais</a></li>
                <li id="btn-endereco"><a href="#endereco">Endereço</a></li>
                <li id="btn-pedidos"><a href="#pedidos">Pedidos</a></li>
                <li id="btn-cartoes"><a href="#cartoes">Cartões</a></li>
                <li id="btn-sair"><a href="/">Sair</a></li>
            </ul>
        </nav>

        <div id="dadosPessoais">
            
            <h2 class="titulo-div">Dados Pessoais</h2><br>
            
            <form id="userData" action="">
                <label for="name">Nome</label>
                <input type="text" id="name"><br>

                <label for="dateOfBirth">Data de Nascimento</label>
                <input type="date" id="dateOfBirth"><br>

                <label for="gender">Genero</label><br>
                <select name="gender" id="gender">
                    <option value="masc" class="gender">Masculino</option>
                    <option value="fem" class="gender">Feminino</option>
                    <option value="nomBinare" class="gender">Não Binario</option>
                </select><br>

                <button type="submit" class="btnAccount">Salvar</button>
            </form>

        </div>

        <div id="endereco">

            <h2 class="titulo-div">Endereço</h2>

            <form id="formEndereco" action="">

                <label for="Logradouro">Logradouro</label>
                <input id="logradouro" type="text"><br>

                <label for="numero">N°</label>
                <input id="numero" type="text"><br>

                <label for="bairro">Bairro</label>
                <input id="bairro" type="text"><br>

                <label for="cidade">Cidade</label>
                <input id="cidade" type="text"><br>

                <label for="cep">CEP</label>
                <input id="cep" type="number"><br>

                <button type="submit" class="btnAccount" >Atualizar Endereço</button>

            </form>

        </div>

        <div id="cartoes">

            <h2 class="titulo-div">Cartões</h2>

            <form id="formCartoes" action="">

                <label for="numeroCartao">Numero do cartão</label>
                <input id="numeroCartao" type="text"><br>

                <label for="nomeTitular">Nome do Titular</label>
                <input type="text" name="nomeTitular" id="nameTitular"><br>

                <label for="validade">Validade</label>
                <input id="validade" type="text"><br>

                <label for="codSeguranca">Codigo de Segurança</label>
                <input type="text" name="codigo" id="codSeguranca"><br>

                <button type="submit" class="btnAccount">Salvar</button>
            
            </form>


        </div>

    </main>


    <%-include('./partials/Footer.ejs')  %>
</body>
</html>